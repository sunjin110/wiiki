

extend type Query {
    todos: [Todo!]!
}

extend type Mutation {
    createTodo(input: NewTodo!): Todo!
    deleteTodo(input: TodoId!): Boolean!
    updateTodo(input: UpdateTodo): Boolean!
}

type Todo {
    id: ID!
    text: String!
    done: Boolean!
    user: User!
}

input NewTodo {
    text: String!
    userId: String!
}

input TodoId {
    id: ID!
}

input UpdateTodo {
    id: ID!
    text: String
    done: Boolean
    userId: String
}